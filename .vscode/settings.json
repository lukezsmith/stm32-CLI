{
    "stm32-for-vscode.armToolchainPath": "/opt/homebrew/bin/arm-none-eabi-gcc",

    "emeraldwalk.runonsave": {
        
        "commands": [
            {
                "match": ".*",
                "isAsync": true,
                "cmd": "echo 'I run for all files.'"
            },
            {
                "match": "\\.txt$",
                "cmd": "echo 'I am a .txt file ${file}.'"
            },
            {
                "match": "\\.c$",
                "cmd": "make"
            },
        ]
    },
    "files.associations": {
        "simple_module.h": "c",
        "atomic": "c",
        "*.tcc": "c",
        "compare": "c",
        "optional": "c",
        "numeric": "c",
        "sstream": "c",
        "cmath": "c",
        "stm32f4xx_hal.h": "c",
        "stm32f4xx.h": "c",
        "stm32f4xx_hal_gpio.h": "c",
        "freertos.h": "c",
        "stm32f407xx.h": "c",
        "task.h": "c",
        "stm32f4xx_hal_uart.h": "c",
        "gpio_module.h": "c",
        "uart_module.h": "c",
        "string_view": "c",
        "utils.h": "c",
        "main.h": "c",
        "stm32f401_discovery.h": "c",
        "stm32f4_discovery_accelerometer.h": "c",
        "stm32f4_discovery.h": "c",
        "queue.h": "c",
        "stdint.h": "c",
        "string.h": "c"
    },
    "cortex-debug.showRTOS": true
}